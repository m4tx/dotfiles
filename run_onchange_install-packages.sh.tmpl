{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash

printf "\033[0;1mInstalling packages...\033[0m\n"

OS_RELEASE_FILE="/etc/os-release"
if [ ! -f "${OS_RELEASE_FILE}" ]; then
  echo "${OS_RELEASE_FILE} does not exist; skipping"
  return
fi

source "${OS_RELEASE_FILE}"
case "$ID" in
"debian")
  sudo apt -y install autojump neovim fish bat fzf tmux git rsync git-delta
  ;;
"arch")
  sudo pacman -S --noconfirm --needed fish pkgfile fzf python-neovim starship bat zoxide git-delta
  sudo pkgfile --update
  ;;
*)
  echo "OS not detected; skipping"
  ;;
esac
{{ end -}}
